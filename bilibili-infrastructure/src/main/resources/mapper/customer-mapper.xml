<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bilibili.gateway.impl.customer.database.CustomerMapper">
    <select id="findByCriteria" resultType="com.bilibili.gateway.impl.customer.database.object.CustomerDO" resultMap="customerMap">
        select * from customer where customer_id = #{id}
    </select>
    <resultMap type="com.bilibili.gateway.impl.customer.database.object.CustomerDO" id="customerMap">
         <result property="customerId" column="emp_no"/>
         <result property="memberId" column="salary"/>
         <result property="globalId" column="from_date"/>
     </resultMap>
</mapper>
